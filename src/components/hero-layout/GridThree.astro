---
import HeroCardVerticalWide from "@components/post-card/HeroCardVerticalWide.astro";
import HeroCardHorizontal from "@components/post-card/HeroCardHorizontal.astro";
const { postData } = Astro.props;

interface Post {
  slug: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate: Date;
    heroImage: string;
    tags: string[];
    authors: string[];
  };
}

const mainPost = postData[0];
const sidePosts = postData.slice(1, 3);
---

<div class="w-full grid grid-cols-2 gap-4 border-b border-stone-200 mb-8 pb-8">
  <div class="w-full">
    <HeroCardVerticalWide slug={mainPost.slug} post={mainPost.data} />
  </div>
  <div class="w-full flex flex-col justify-start items-start gap-4">
    {
      sidePosts.map((post: Post) => (
        <HeroCardHorizontal slug={post.slug} post={post.data} />
      ))
    }
  </div>
</div>
