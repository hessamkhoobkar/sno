---
import HeroCardVertical from "../post-card/HeroCardVertical.astro";
const { postData } = Astro.props;

interface Post {
  slug: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate: Date;
    heroImage: string;
    tags: string[];
    authors: string[];
  };
}
---

<div class="w-full grid grid-cols-3 gap-4 border-b border-stone-200 mb-8 pb-8">
  {
    postData.map((post: Post) => (
      <HeroCardVertical slug={post.slug} post={post.data} />
    ))
  }
</div>
