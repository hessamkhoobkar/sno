---
import HeroCardHorizontalSplit from "@components/post-card/HeroCardHorizontalSplit.astro";
const { post } = Astro.props;
---

<div
  class="w-full hero-height grid grid-cols-1 gap-4 border-b border-stone-200 mb-8 pb-8"
>
  <HeroCardHorizontalSplit post={post.data} slug={post.slug} />
</div>

<style>
  .hero-height {
    height: 50dvh;
    height: 50vh;
  }
</style>
