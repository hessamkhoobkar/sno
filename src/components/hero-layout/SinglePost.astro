---
import HeroCardHorizontalSplit from "@components/post-card/HeroCardHorizontalSplit.astro";
const { post } = Astro.props;
---

<div
  class="w-full hero-hight grid grid-cols-1 gap-4 border-b border-stone-200 mb-8 pb-8"
>
  <HeroCardHorizontalSplit post={post.data} slug={post.slug} />
</div>

<style>
  .hero-height {
    height: 50dvh;
    height: 50vh;
  }

  .card img {
    opacity: 1;
    transition: all 1.5s cubic-bezier(0.075, 0.82, 0.165, 1);
  }
  .card:hover img {
    opacity: 0.5;
    transition: all 1.5s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  .card:hover .undrline {
    opacity: 1;
  }
</style>
