---
import FormattedDate from "@components/FormattedDate.astro";
const { slug, post } = Astro.props;
---

<div
  class="card relative w-full flex justify-start items-start rounded-lg bg-stone-950 overflow-hidden"
>
  <div class="w-1/2 h-full overflow-hidden">
    <img
      class="object-cover w-full h-full"
      src={post.heroImage}
      alt={post.title}
    />
  </div>
  <div
    class="w-1/2 flex flex-col justify-start items-start gap-4 p-8 text-white h-60"
  >
    <div class="flex justify-start items-center gap-2 text-xs">
      <span class="text-stone-300">
        <FormattedDate date={post.pubDate} />
      </span>
      <span>.</span>
      <span
        class="font-bold text-sky-600 hover:text-sky-500 transition-all duration-200 ease-in-out"
      >
        <a class="relative block" href={`/tags/${post.tags[0]}/`}>
          {post.tags[0]}
        </a>
      </span>
    </div>
    <h3 class="relative text-xl font-serif font-bold">
      <span>
        {post.title}
      </span>
      <span
        class="undrline absolute block inset-0 underline opacity-0 duration-300 ease-in-out"
        tabindex="-1"
        aria-hidden="true"
      >
        {post.title}
      </span>
    </h3>
  </div>
  <a class="absolute inset-0 z-10" href={`/blog/${slug}/`}></a>
</div>

<style>
  .card img {
    opacity: 1;
    transform: scale(1);
    transition: all 1.5s cubic-bezier(0.075, 0.82, 0.165, 1);
  }
  .card:hover img {
    opacity: 0.8;
    transform: scale(1.1);
    transition: all 1.5s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  .card:hover .undrline {
    opacity: 1;
  }
</style>
