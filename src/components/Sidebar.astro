---
import { getCollection } from "astro:content";
const allNews = await getCollection("news");

const uniqueTags = [...new Set(allNews.map((news) => news.data.tags).flat())];
---

<div class="mb-8">
  <h2 class="font-serif font-bold text-2xl mb-2">About me</h2>
  <p>
    I'm a traveler, wanderer, explorer, and adventurer of life's great journey.
  </p>
</div>
<h2 class="font-serif font-bold text-2xl mb-2">Categories</h2>
<ul>
  {uniqueTags.map((tag) => <li>{tag}</li>)}
</ul>
