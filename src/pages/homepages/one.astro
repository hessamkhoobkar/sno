---
import MainLayout from "@layouts/MainLayout.astro";
import RowThree from "@components/hero-layout/RowThree.astro";
import TwoColWithSidebar from "@components/list-layout/TwoColWithSidebar.astro";

// Get data from Astro's content collection
import { getCollection } from "astro:content";
const allBlogPost = await getCollection("blog");

const topThreePost = allBlogPost.slice(0, 3);
const restOfPost = allBlogPost.slice(3);
---

<MainLayout>
  <RowThree postData={topThreePost} />
  <TwoColWithSidebar postData={restOfPost} />
</MainLayout>
