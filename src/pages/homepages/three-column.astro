---
import { getCollection } from "astro:content";
const allBlogPost = await getCollection("blog");
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostVertical from "../../components/PostVertical.astro";
---

<BaseLayout>
  <div class="grid grid-cols-3 gap-8 gap-y-12">
    {
      allBlogPost.map((post) => (
        <PostVertical slug={news.slug} post={post.data} />
      ))
    }
  </div>
</BaseLayout>
