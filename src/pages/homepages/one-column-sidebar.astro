---
import { getCollection } from "astro:content";
const allNews = await getCollection("news");
import OnecolumnSidebar from "../../layouts/OnecolumnSidebar.astro";
---

<OnecolumnSidebar>
  <div class="flex flex-col justify-start items-start gap-4">
    {
      allNews.map((news) => (
        <div class="post-card w-full flex flex-col justify-start items-start gap-2 cursor-pointer">
          <div class="overflow-hidden">
            <img src={news.data.heroImage} alt={news.data.title} />
          </div>
          <div
            class={`post-info flex flex-col justify-start items-start gap-4`}
          >
            <h3 class="text-2xl font-serif font-bold">{news.data.title}</h3>
            <p class="text-sm">{news.data.description}</p>
            <div class="flex justify-start items-center gap-2 text-xs">
              <span class="text-stone-400 hover:text-stone-950 underline">
                {news.data.authors[0]}
              </span>
              <span class="text-stone-400">{news.data.pubDate}</span>
              <span class="text-sky-600">{news.data.tags[0]}</span>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</OnecolumnSidebar>
