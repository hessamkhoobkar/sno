---
import MainLayout from "@layouts/MainLayout.astro";
import RowThree from "@components/hero-layout/RowThree.astro";
import TwoColWithSidebar from "@components/list-layout/TwoColWithSidebar.astro";

// Get data from Astro's content collection
import { getCollection } from "astro:content";
const allBlogPost = await getCollection("blog");

const heroPosts = allBlogPost.slice(0, 3);
const listPosts = allBlogPost.slice(3);
---

<MainLayout>
  <RowThree postData={heroPosts} />
  <TwoColWithSidebar postData={listPosts} />
</MainLayout>
