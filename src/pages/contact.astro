---
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout>
  <div class="flex justify-start items-start py-16">
    <div class="w-1/2 flex flex-col justify-start items-start px-16">
      <div>
        <h1 class="font-serif font-bold text-4xl mb-2">Get in touch</h1>
        <p>
          Lorem ipsum dolor sit amet consectetur adipiscing elit nulla
          adipiscing tincidunt interdum tellus du.
        </p>
      </div>
      <div class="flex flex-col justify-start items-start mt-6">
        <h2 class="text-lg font-bold mb-2">Contact us via:</h2>
        <ul>
          <li>
            <a
              href="mailto:contact@snow.com"
              class="flex justify-start items-center gap-2 p-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M12 22q-2.075 0-3.9-.788t-3.175-2.137q-1.35-1.35-2.137-3.175T2 12q0-2.075.788-3.9t2.137-3.175q1.35-1.35 3.175-2.137T12 2q2.075 0 3.9.788t3.175 2.137q1.35 1.35 2.138 3.175T22 12v1.45q0 1.475-1.012 2.513T18.5 17q-.875 0-1.65-.375t-1.3-1.075q-.725.725-1.638 1.088T12 17q-2.075 0-3.537-1.463T7 12q0-2.075 1.463-3.537T12 7q2.075 0 3.538 1.463T17 12v1.45q0 .65.425 1.1T18.5 15q.65 0 1.075-.45t.425-1.1V12q0-3.35-2.325-5.675T12 4Q8.65 4 6.325 6.325T4 12q0 3.35 2.325 5.675T12 20h4q.425 0 .713.288T17 21q0 .425-.288.713T16 22h-4Zm0-7q1.25 0 2.125-.875T15 12q0-1.25-.875-2.125T12 9q-1.25 0-2.125.875T9 12q0 1.25.875 2.125T12 15Z"
                ></path></svg
              >
              <span>contact@snow.com</span>
            </a>
          </li>
          <li>
            <a
              href="mailto:press@snow.com"
              class="flex justify-start items-center gap-2 p-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M12 22q-2.075 0-3.9-.788t-3.175-2.137q-1.35-1.35-2.137-3.175T2 12q0-2.075.788-3.9t2.137-3.175q1.35-1.35 3.175-2.137T12 2q2.075 0 3.9.788t3.175 2.137q1.35 1.35 2.138 3.175T22 12v1.45q0 1.475-1.012 2.513T18.5 17q-.875 0-1.65-.375t-1.3-1.075q-.725.725-1.638 1.088T12 17q-2.075 0-3.537-1.463T7 12q0-2.075 1.463-3.537T12 7q2.075 0 3.538 1.463T17 12v1.45q0 .65.425 1.1T18.5 15q.65 0 1.075-.45t.425-1.1V12q0-3.35-2.325-5.675T12 4Q8.65 4 6.325 6.325T4 12q0 3.35 2.325 5.675T12 20h4q.425 0 .713.288T17 21q0 .425-.288.713T16 22h-4Zm0-7q1.25 0 2.125-.875T15 12q0-1.25-.875-2.125T12 9q-1.25 0-2.125.875T9 12q0 1.25.875 2.125T12 15Z"
                ></path></svg
              >
              <span>press@snow.com</span>
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="w-1/2 px-8">
      <form
        id="wf-form-Contact-Form"
        name="wf-form-Contact-Form"
        data-name="Contact Form"
        method="get"
        aria-label="Contact Form"
      >
        <input
          type="text"
          maxlength="256"
          name="name"
          data-name="Name"
          placeholder="Name"
          id="name"
          autocomplete="off"
          required
        />
        <input
          type="email"
          maxlength="256"
          name="email"
          data-name="Email"
          placeholder="Email"
          id="email"
          required
        />
        <textarea
          rows="8"
          placeholder="Message"
          maxlength="5000"
          id="Message"
          name="Message"
          data-name="field"
          required></textarea>

        <input type="submit" value="Submit" />
      </form>
    </div>
  </div>
</MainLayout>

<style>
  form {
    @apply flex flex-col justify-start items-start gap-3;
  }

  form input,
  form textarea {
    @apply w-full bg-stone-50 p-5 rounded-lg border border-stone-200;
  }

  form input[type="submit"] {
    @apply bg-stone-950 text-white font-bold;
  }
</style>
